<Window x:Class="RadioControlEventMgrUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioControlEventMgrUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background= "#FFF2F2F2"
        Title="Login" Height="210" MaxHeight="210" MinHeight="210" Width="500" MaxWidth="500" MinWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Name="lblLoginHeading" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10"
               HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold"
               Content="Please login to access application" />
        <Label Grid.Row="1" Grid.Column="0" Content="Username" Margin="10" FontWeight="DemiBold" />
        <Label Grid.Row="2" Grid.Column="0" Content="Password" Margin="10" FontWeight="DemiBold"/>

        <TextBox Name="tbxUsername" Grid.Row="1" Grid.Column="1" Height="25" Margin="10" 
                 ToolTip="Please enter your username" TabIndex="0" VerticalContentAlignment="Center"/>
        <PasswordBox Name="tbxPassword" Grid.Row="2" Grid.Column="1" Height="25" Margin="10"
                     ToolTip="Please enter your password" TabIndex="1" VerticalContentAlignment="Center"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnLoginEnter" Content="Exit" Height="25" Width="80" Margin="10" ToolTip="Press to exit the application" TabIndex="3"/>
            <Button Name="btnLoginExit" Content="Enter" Height="25" Width="80" Margin="10" ToolTip="Press to login with credentials" TabIndex="2"/>
        </StackPanel>

       <Image Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" Margin="10"
              Source="Images/logo.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
